<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>MyAsset — Login</title>
  <style>
    :root{
      --bg:#f4f6f9; --card:#ffffff; --accent:#2563eb; --muted:#6b7280;
      --radius:14px; font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    *{box-sizing:border-box}
    body{
      margin:0; min-height:100vh; display:flex; align-items:center; justify-content:center;
      background: linear-gradient(180deg, #eef2ff 0%, var(--bg) 100%);
      padding:24px;
    }
    .card{
      width:100%; max-width:420px; background:var(--card); border-radius:var(--radius);
      box-shadow: 0 8px 30px rgba(24,39,75,0.08); padding:28px;
    }
    h1{margin:0 0 8px; font-size:20px; color:#0f172a}
    p.lead{margin:0 0 18px; color:var(--muted); font-size:14px}
    form{display:grid; gap:12px}
    label{font-size:13px; color:#334155}
    input[type="email"], input[type="password"]{
      width:100%; padding:12px 14px; border-radius:10px; border:1px solid #e6e9ef;
      outline:none; font-size:14px; background:#fbfdff;
    }
    .row{display:flex; align-items:center; justify-content:space-between; gap:12px}
    .remember{display:flex; align-items:center; gap:8px; font-size:13px; color:var(--muted)}
    .btn{
      display:inline-block; text-align:center; padding:12px 14px; border-radius:10px; cursor:pointer;
      border:0; font-weight:600; font-size:15px; background:var(--accent); color:white;
      box-shadow: 0 6px 18px rgba(37,99,235,0.14);
    }
    .secondary{
      background:transparent; color:#ef4444; border:1px solid rgba(37,99,235,0.12);
    }
    .small{font-size:13px; color:var(--muted)}
    .deactivate{display:block; text-align:center; margin-top:14px; font-size:13px; color:#ef4444; text-decoration:none}
    .error{color:#b91c1c; font-size:13px; display:none}
    .pw-toggle{cursor:pointer; font-size:13px; color:var(--muted); user-select:none}
    @media (max-width:420px){ .card{padding:20px} }

    #login-title{
        text-align: center;
    }
  </style>
</head>
<body>
  <main class="card" role="main" aria-labelledby="login-title">
    <h1 id="login-title">MyAsset</h1>
    <div class="error"></div>
    <form id="loginForm" action="" method="POST" novalidate>
      <div>
        <label for="email">Email</label>
        <input id="email" name="email" type="email" inputmode="email" placeholder="you@example.com" required />
      </div>

      <div>
        <label for="password">Password</label>
        <div style="display:flex;gap:8px;align-items:center">
          <input id="password" name="password" type="password" placeholder="••••••••" required />
          <span id="togglePw" class="pw-toggle" aria-hidden="true">Show</span>
        </div>
      </div>



      <div style="text-align:center; margin-top:6px;">
        <button type="submit" class="btn secondary ">Delete My Account</button>
      </div>


    </form>

  </main>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(()=>{
        $('#loginForm').submit((e)=>{
           e.preventDefault();
           const baseUrl = window.location.origin;
           const email = $('#email').val();
           const password = $('#password').val();
           $.ajax({
            url : `${baseUrl}/delete-account-submit`,
            method : 'post',
            data: {email,password},
            dataType:'json',
            success: (res)=>{
                Swal.fire({
                icon: "success",
                title: "Success...",
                text: res.message
                });
            },
            error:(error)=>{
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: error.responseJSON.message
                });
            },
           })
        })
    })
  </script>
</body>
</html>
